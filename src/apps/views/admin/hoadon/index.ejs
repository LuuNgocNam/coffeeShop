<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../layout/header.ejs", {title:"Hóa Đơn"}) %>

</head>

<body>
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->


    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <%- include("../layout/nav_header.ejs") %>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <%- include("../layout/sidebar.ejs") %>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="container-fluid mt-3">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title"><a href="/admin/hoadon/create">Thêm hóa đơn</a></h4>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped verticle-middle">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Tên khách hàng</th>
                                                <th scope="col">Số điện thoại</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Ngày</th>
                                                <th scope="col">PTTT</th>
                                                <th scope="col">Tổng tiền</th>
                                                <th scope="col">Trạng thái</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(x in hoadon){%>
                                                <tr>
                                                <td><%=(Number(x)+1)%></td>
                                                <td><%=hoadon[x].name%></td>
                                                <td><%=hoadon[x].phone%></td>
                                                <td><%=hoadon[x].email%></td>
                                                <td><%=hoadon[x].day%></td>
                                                <td><%=hoadon[x].method%></td>
                                                <td><%=hoadon[x].price%>đ</td>                                                
                                                <td>
                                                    <%if(hoadon[x].is_stock){%>
                                                        <span class="label label-success">Đã thanh toán</span>
                                                    <%}else{%>
                                                        <span class="label label-danger">Chưa thanh toán</span>
                                                    <%}%>
                                                </td>
                                                <td>
                                                    <a href="/admin/hoadon/edit/<%=hoadon[x].id%>" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                                                        <i class="fa fa-pencil color-muted m-r-5"></i> 
                                                    </a>
                                                    <a href="/admin/hoadon/delete/<%=hoadon[x].id%>" onclick="if(!confirm('Delete ?')) return false; " data-toggle="tooltip" data-placement="top" title="" data-original-title="Close">
                                                        <i class="fa fa-close color-danger"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            <%}%>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="panel-footer">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                                <%if(page > 1){%>
                                                    <li class="page-item"><a class="page-link" href="/admin/hoadon/?page=<%=page-1%>">&laquo;</a></li>
                                                <%}%>
                                            <%for(x in pages){%>
                                                <%if(pages[x] ==="..."){%>
                                                    <li class="page-item"><a class="page-link" onclick="return false;" href=""><%=pages[x]%></a></li>
                                                <%} else {%>
                                                    <li class="page-item <%= pages[x] == page? 'active' : '' %>"><a class="page-link" href="/admin/hoadon/?page=<%=pages[x]%>"><%=pages[x]%></a></li>
                                                <%}%>                                        
                                            <%}%>
                                            <%if(page < totalPage){%>
                                                <li class="page-item"><a class="page-link" href="/admin/hoadon/?page=<%=page+1%>">&raquo;</a></li>
                                            <%}%>
                                        </ul>
                                    </nav>
                                </div>
                                <a class="btn btn-info" href="/exportExcel?is_stock=true">Excel</a>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->


        <!--**********************************
            Footer start
        ***********************************-->
        <!-- <div class="footer">
            <div class="copyright">
                <p>Copyright &copy; Designed & Developed by <a href="https://themeforest.net/user/quixlab">Quixlab</a> 2018</p>
            </div>
        </div> -->
        <!--**********************************
            Footer end
        ***********************************-->
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!--**********************************
        Scripts
    ***********************************-->
	<%- include("../layout/footer.ejs") %>

</body>

</html>
<html lang="en">

<head>
    <%- include("../layout/header.ejs", {title:"Thêm Dịch Vụ"}) %>


</head>


<body>
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->


    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <%- include("../layout/nav_header.ejs") %>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <%- include("../layout/sidebar.ejs") %>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="container-fluid mt-3">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Thêm dịch vụ</h4>
                            <div class="basic-form">
                                <form role="form" action ="/admin/dichvu/store" method="POST" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Tên dịch vu</label>
                                        <input type="text" required name="name" class="form-control" placeholder="Tên dịch vụ">
                                    </div>
                                    <div class="form-group">
                                        <label>Mô tả</label>
                                        <input type="text" required name="describle" class="form-control" placeholder="Mô tả">
                                    </div>
                                    <!-- <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Mô tả</label>
                                            <textarea class="form-control" requiredname="describle" id="describle" rows="10" cols="80"></textarea>
                                        </div>                                           
                                    </div>     -->
                                    <div class="form-group">
                                        <input type="file" required name="thumbnail" class="form-control-file">
                                    </div>
                                    <button type="submit" class="btn btn-dark">Tạo dịch vụ</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->


        <!--**********************************
            Footer start
        ***********************************-->

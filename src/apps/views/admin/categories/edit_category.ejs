<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../layout/header.ejs", {title:"Sửa Hãng"}) %>

</head>

<body>
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->


    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <%- include("../layout/nav_header.ejs") %>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <%- include("../layout/sidebar.ejs") %>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="container-fluid mt-3">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Sửa Hãng</h4>
                            <div class="basic-form">
                                <form role="form" action="/admin/category/update/<%=category._id%>" method="POST" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <label>Tên hãng</label>
                                        <input type="text" required value="<%=category.title%>" name="title" class="form-control" placeholder="name">
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label>Active</label>
                                            <select id="inputState" name="is_stock" required class="form-control">
                                                    <option selected value="1" <%=category.is_stock ? "selected" : ""%> >Còn hàng</option>
                                                    <option value="0" <%=category.is_stock ? "selected" : ""%> >Hết hàng</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="file" name="thumbnail" class="form-control-file">
                                        <img width="100" height="100" src="/static/images/<%=category.thumbnail%>" alt="">
                                    </div>

                                    <button type="submit" class="btn btn-dark">Sửa dịch vụ</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->


        <!--**********************************
            Footer start
        ***********************************-->
        <!-- <div class="footer">
            <div class="copyright">
                <p>Copyright &copy; Designed & Developed by <a href="https://themeforest.net/user/quixlab">Quixlab</a> 2018</p>
            </div>
        </div> -->
        <!--**********************************
            Footer end
        ***********************************-->
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!--**********************************
        Scripts
    ***********************************-->
	<%- include("../layout/footer.ejs") %>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../layout/header.ejs", {title:"Danh Mục Bài Viết"}) %>

</head>

<body>
    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->


    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper">

        <!--**********************************
            Nav header start
        ***********************************-->
        <%- include("../layout/nav_header.ejs") %>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <%- include("../layout/sidebar.ejs") %>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="container-fluid mt-3">
                <div class="row">


                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title"><a href="./baiviet/create">Thêm bài viết</a></h4>
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped verticle-middle">
                                        <thead>
                                            <tr>
                                                <th scope="col">Id</th>
                                                <th scope="col">Tên bài viết</th>
                                                <th scope="col">Hình ảnh</th>
                                                <th scope="col">Tác giả</th>
                                                <th scope="col">Ngày</th>
                                                <th scope="col">Bình luận</th>
                                                <th scope="col">Nội dung</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                            <%for(x in baiviet){%>
                                                <td><%=(Number(x)+1)%></td>
                                                <td><%=baiviet[x].name%></td>
                                                <td style="text-align: center"><img width="50" height="50"
                                                    src="/static/images/<%=baiviet[x].thumbnail%>" />
                                                </td>
                                                <td><%=baiviet[x].author%></td>
                                                <td><%=baiviet[x].day%></td>
                                                <td><%=baiviet[x].comment%></td>
                                                <td><%=baiviet[x].content%></td> 
                                                <td>
                                                    <span>
                                                        <a href="/admin/baiviet/edit/<%=baiviet[x].id%>" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                                                            <i class="fa fa-pencil color-muted m-r-5"></i> 
                                                        </a>
                                                        <a href="/admin/baiviet/delete/<%=baiviet[x].id%>" onclick="if(!confirm('Delete ?')) return false; " data-toggle="tooltip" data-placement="top" title="" data-original-title="Close">
                                                            <i class="fa fa-close color-danger"></i>
                                                        </a>
                                                    </span>
                                                </td>
                                            </tr>
                                            <%}%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
            <!-- #/ container -->
        </div>
        <!--**********************************
            Content body end
        ***********************************-->


        <!--**********************************
            Footer start
        ***********************************-->
        <!-- <div class="footer">
            <div class="copyright">
                <p>Copyright &copy; Designed & Developed by <a href="https://themeforest.net/user/quixlab">Quixlab</a> 2018</p>
            </div>
        </div> -->
        <!--**********************************
            Footer end
        ***********************************-->
    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!--**********************************
        Scripts
    ***********************************-->
	<%- include("../layout/footer.ejs") %>

</body>

</html>